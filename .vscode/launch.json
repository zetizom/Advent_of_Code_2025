{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: gcc build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      // 현재 편집 중인 파일의 폴더에 있는 .exe를 실행합니다.
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      // 실제 설치된 gdb.exe 경로를 정확히 입력하세요. 
      // 만약 64비트를 쓰신다면 C:\\mingw64\\bin\\gdb.exe 일 수 있습니다.
      "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // tasks.json의 label과 반드시 일치해야 합니다.
      "preLaunchTask": "C/C++: gcc build active file"
    }
  ]
}