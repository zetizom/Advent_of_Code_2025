{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "gcc",
      // ... args 부분은 그대로 두세요 ...
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],  // <--- 여기 콤마(,) 잊지 마세요!
      
      // ▼▼▼ 아래 내용을 복사해서 추가하세요 ▼▼▼
      "options": {
        "env": {
          "TEMP": "${workspaceFolder}",
          "TMP": "${workspaceFolder}"
        }
      },
      // ▲▲▲ 여기까지 ▲▲▲

      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}